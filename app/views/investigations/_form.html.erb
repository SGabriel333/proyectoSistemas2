

<%= form_with(model: investigation, local: true) do |form| %>
  <% if investigation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(investigation.errors.count, "error") %> prohibited this investigation from being saved:</h2>

      <ul>
      <% investigation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class= 'col-sm-3 col-md-3'>
    </div>

    <div class= 'col-sm-6 col-md-6'>
      <h1>Nuevo Trabajo de Investigacion.</h1>

      <div class="form-group">
        <%= form.label :nombre %>
        <%= form.text_field :nombre, id: :investigation_nombre, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :descripcion %>
        <%= form.text_field :descripcion, id: :investigation_descripcion, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :fecha_entrega, "Fecha de entrega: " %>
        <%= form.date_select :fecha_entrega, id: :investigation_fecha_entrega, class: 'custom-select' %>
      </div>

     

      <div class="actions form-group">
        <%= form.submit "Guardar" , class: 'btn btn-primary' %>
        <%= link_to 'Volver', my_investigations_investigations_path, class: 'btn btn-success' %>
      </div>

    </div>
    
    <div class= 'col-sm-3 col-md-3'>
    </div>
  </div>
<% end %>
