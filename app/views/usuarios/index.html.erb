 <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissable"><a class="close" data-dismiss="alert" aria-label="close">x</a><%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:alert] %>
      <div class="alert alert-danger alert-dismissable">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
          <%= flash[:alert] %>
        </div>
  <% end %>
<section class="content">
      <div class="row">
        <div class="col-xs-12">    
      <!-- Content Header (Page header) -->
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Usuarios</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <br/>
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                      <th>Nombre</th>
                      <th>Apellido</th>
                      <th>Email</th>
                      <th>Rol</th>
                      <th>Acciones</th>
                                    
                </tr>
                </thead>
                  <tbody>
              <% @users.each do |usuario| %>
                    <tr>
                     <td><%= usuario.name %></td>
                     <td><%= usuario.last_name %></td>
                     <td><%= usuario.email %></td>
                     <td><%= usuario.roles.pluck(:name).join(",")%></td>
                     <td>
                     <%if can? :read, usuario%>        
                        <%= link_to usuario_path(usuario),:remote => true,class: 'btn btn-default fa fa-eye' do %>
                        <%end%>
                     <%end%>
                     <%if can? :update, usuario%>
                        <%= link_to edit_usuario_path(usuario),:remote=>true, class: 'btn btn-default fa fa-edit' do %>
                       <%end%>
                     <%end%>
                   
                     <%if can? :destroy,usuario%>
                        <%if usuario==current_user%>
                        <%else%>    
                        <%= link_to usuario_path(id: usuario.id, authenticity_token: form_authenticity_token), method: :delete,class: 'btn btn-default fa fa-remove', data: { confirm: 'Estas seguro?'} do %>
                        <%end%>
                     <%end%>
                     <%end%>
                    </td>
                   </tr>
              <% end %>                  
               </tbody>
                <tfoot>
                <tr>
                      <th>Nombre</th>
                      <th>Apellido</th>
                      <th>Email</th>
                      <th>Rol</th>
                      <th>Acciones</th>                 

                </tr>
                </tfoot>
              </table>
  

            </div>
          <div class="box-footer clearfix">
          <ul class="pagination pagination-sm no-margin pull-left">
          <li>
          <%if can? :create,current_user%>
          <%= link_to new_usuario_path, :remote=> true do %>
          <button class="btn btn-primary" type="submit">Agregar Usuario</button>
          <%end%>
          <%end%>
          </li>
          </ul>
          </div>

            <!-- /.box-body -->
          </div>
        

          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>


   <div id='ver' style='display:none;'>
  </div>

<script>
  $(function () {
    $('#example1').DataTable()
